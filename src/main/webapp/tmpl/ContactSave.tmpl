<script id="tmpl-ContactSave" type="text/html">
	<div class="ContactSave modal">
		<div class="ContactSave-header modal-header">
			<div class="close btnClose"><i class="icon-remove"></i></div>
			<h3>{{#if id}}Update{{else}}Create{{/if}} Contact</h3>
		</div>
		<div class="ContactSave-content modal-body">
			<div class="form-horizontal">
				<div class="control-group">
					<div class="control-label">Name:</div>
					<div class="controls">
						<input type='text' name="name" value="{{name}}" />
					</div>
				</div>
				<div class="control-group">
					<div class="control-label">Address:</div>
					<div class="controls">
						<input type='text' name="address" value="{{address}}" />
					</div>
				</div>
				<div class="control-group">
					<div class="control-label">Phone:</div>
					<div class="controls">
						<input type='text' name="phoneNum" value="{{phoneNum}}" />
					</div>
				</div>
			</div>
		</div>
		<div class="ContactSave-footer modal-footer">
			<div class="btn btn-primary btnCreate">Save</div>
			<div class="btn btnClose">Close</div>
		</div>
	</div>  
</script>